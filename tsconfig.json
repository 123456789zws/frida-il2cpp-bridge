{
  "compilerOptions": {
    "target": "es2022",
    "lib": [ "es2020" ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "dist",
    "outFile": "dist/index.js",
    "esModuleInterop": true,
    "stripInternal": true,
    "sourceMap": true,
    "strict": true,
    "plugins": [
      { "transform": "ts-transformer-inline-file/transformer" },
      { "transform": "ts-macros" },
    ],
  },
  "files": [ "src/index.ts" ]
}
